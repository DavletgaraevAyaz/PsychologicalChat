@page "/register"
@using MudBlazor
@using PsychoChat.Services
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<MudTheme Provider="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<!-- Шапка -->
<header class="header">
    <div class="header-content">
        <div class="logo">
            <MudIcon Icon="@Icons.Material.Filled.Psychology" 
                    Class="header-logo"/>
            <span class="logo-text">Кризис-Менеджер</span>
        </div>
        <nav class="nav">
            <MudText Class="nav-link" OnClick="@(() => Navigation.NavigateTo("/welcome"))">
                Главная
            </MudText>
            <MudText Class="nav-link" OnClick="@(() => Navigation.NavigateTo("/login"))">
                Войти
            </MudText>
        </nav>
    </div>
</header>

<!-- Основной контент -->
<main class="main-content">
    <section class="section blue-section">
        <div class="section-content">
            <div class="auth-container">
                <!-- Красивая карточка формы -->
                <div class="form-card">
                    <div class="form-header">
                        <h2 class="form-title">Быстрая регистрация</h2>
                        <p class="form-subtitle">Начните анонимный чат с психологом</p>
                    </div>

                    <MudForm @ref="form" @onsubmit="HandleRegister">
                        <div class="form-fields">
                            <!-- Только поле для ввода имени -->
                            <div class="form-group">
                                <MudTextField @bind-Value="model.Name" 
                                             Label="Как к вам обращаться?" 
                                             Variant="Variant.Outlined"
                                             FullWidth="true"
                                             Required="true"
                                             RequiredError="Укажите, как к вам обращаться"
                                             Class="form-input"
                                             Size="Size.Small"
                                             Placeholder="Можно использовать псевдоним"/>
                            </div>
                        </div>

                        <!-- Информационный блок -->
                        <div class="info-box">
                            <MudIcon Icon="@Icons.Material.Outlined.Info" Class="info-icon"/>
                            <div class="info-content">
                                <h4>Анонимный доступ</h4>
                                <p>Для начала общения достаточно указать только имя. Все данные защищены.</p>
                            </div>
                        </div>

                        <!-- Кнопка регистрации -->
                        <div class="form-actions">
                            <MudButton Variant="Variant.Filled" 
                                      Color="Color.Primary" 
                                      FullWidth="true" 
                                      Size="Size.Medium"
                                      Class="submit-button"
                                      Type="Submit"
                                      Disabled="isLoading"
                                       OnClick="HandleRegister">
                                @if (isLoading)
                                {
                                    <MudProgressCircular Size="Size.Small" Color="Color.Inherit" Class="button-spinner"/>
                                    <span>Подключение...</span>
                                }
                                else
                                {
                                    <span>Начать общение</span>
                                }
                            </MudButton>
                        </div>
                    </MudForm>

                    <!-- Разделитель -->
                    <div class="form-divider">
                        <div class="divider-line"></div>
                        <span class="divider-text">или</span>
                        <div class="divider-line"></div>
                    </div>
                    
                    <!-- Ссылка на вход -->
                    <div class="form-footer">
                        <span class="footer-text">Уже общались с нами?</span>
                        <MudButton Variant="Variant.Text" 
                                  Color="Color.Primary"
                                  Size="Size.Small"
                                   OnClick="@(() => Navigation.NavigateTo("/psycho"))"
                                  Class="footer-link">
                            Продолжить
                        </MudButton>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<!-- Подвал -->
<footer class="footer">
    <div class="footer-content">
        <div class="footer-section">
            <div class="footer-logo">
                <MudIcon Icon="@Icons.Material.Filled.Psychology" Class="footer-logo-icon"/>
                <span class="footer-logo-text">Кризис-Менеджер</span>
            </div>
        </div>
        
        <div class="footer-section">
            <h4 class="footer-title">Контакты</h4>
            <div class="footer-contact">help@crisis-manager.ru</div>
            <div class="footer-contact">8-800-123-45-67</div>
        </div>
        
        <div class="footer-section">
            <h4 class="footer-title">Ссылки</h4>
            <MudText Class="footer-link" OnClick="@(() => Navigation.NavigateTo("/welcome"))">
                Главная
            </MudText>
            <MudText Class="footer-link" OnClick="@(() => Navigation.NavigateTo("/login"))">
                Войти
            </MudText>
        </div>
    </div>
    
    <div class="footer-bottom">
        <div class="footer-copyright">
            © 2025 Кризис-Менеджер
        </div>
    </div>
</footer>

@code {
    private MudForm form;
    private bool isLoading = false;
    private RegisterModel model = new();

    private class RegisterModel
    {
        public string Name { get; set; } = string.Empty;
    }

    private async Task HandleRegister()
    {
        try
        {
            isLoading = true;
            await form.Validate();

            if (form.IsValid)
            {
                // Генерируем случайные данные для анонимного входа
                var randomEmail = $"anonymous_{Guid.NewGuid().ToString("N").Substring(0, 8)}@crisis-manager.ru";
                var randomPassword = Guid.NewGuid().ToString("N").Substring(0, 12);
                
                var result = await AuthService.RegisterAsync(model.Name, "Student");

                if (result.Success)
                {
                    Snackbar.Add("Добро пожаловать! Вы подключены анонимно.", Severity.Success);
                    await Task.Delay(1000);
                    Navigation.NavigateTo("/psycho", true);
                }
                else
                {
                    Snackbar.Add(result.Message ?? "Ошибка подключения", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Ошибка: {ex.Message}", Severity.Error);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/login");
    }
}

